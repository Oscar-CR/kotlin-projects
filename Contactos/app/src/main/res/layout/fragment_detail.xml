<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgPorfileDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvUserDetail"
        style="@style/loginTextView"
        android:text="@string/contact_name"
        android:layout_below="@id/imgPorfileDetail" />

    <EditText
        android:id="@+id/etUserDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUserDetail"
        android:layout_marginHorizontal="@dimen/size_24" />
    <Button
        android:id="@+id/btContactEdit"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:background="@drawable/ic_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/size_24"
        android:layout_below="@id/tvUserDetail"
        />

    <TextView
        android:id="@+id/tvPhoneDetail"
        style="@style/loginTextView"
        android:text="@string/contact_phone"
        android:layout_below="@+id/etUserDetail"
        />
    <EditText
        android:id="@+id/etPhoneDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPhoneDetail"
        android:layout_marginHorizontal="@dimen/size_24"/>

    <Button
        android:id="@+id/btPhoneEdit"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:background="@drawable/ic_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/size_24"
        android:layout_below="@id/tvPhoneDetail"
        />

    <Button
        android:id="@+id/btSaveDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_btAccept"
        android:layout_below="@+id/etPhoneDetail"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/size_48"
        />

    <Button
        android:id="@+id/btCancelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_btCancel"
        android:layout_below="@+id/btSaveDetail"
        android:layout_centerInParent="true"
        />

</RelativeLayout>