<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View android:id="@+id/red"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#FF0000"
        android:layout_below="@id/green"
        android:layout_centerHorizontal="true"
        />

    <View android:id="@+id/pink"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#FF00FF"
        android:layout_above="@id/blue"
        android:layout_centerHorizontal="true"
        />

    <View android:id="@+id/blue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#0000FF"
        android:layout_above="@id/green"
        android:layout_centerHorizontal="true"
        />

    <View android:id="@+id/green"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FF00"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <View android:id="@+id/yellow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#FFFF00"
        android:layout_below="@id/red"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>